name: Deploy blockchain content to app.degenvets.com

on:
  push:
    branches: ["main"]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages-app"
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v5

      - name: Prepare deployment for app.degenvets.com
        run: |
          # Create a separate deployment directory for app.degenvets.com
          mkdir -p ./output-app
          echo "Copying all files from GX-blockchain to output-app directory..."
          cp -R ./GX-blockchain/* ./output-app/
          # Move index.html from static/ to the root of output-app
          cp ./GX-blockchain/static/index.html ./output-app/index.html
          # Add the CNAME file for app.degenvets.com
          echo "app.degenvets.com" > ./output-app/CNAME
          echo "Output directory structure:"
          ls -R ./output-app

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './output-app'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
